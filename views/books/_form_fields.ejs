<div>
    <label>Titre</label>
    <input type="text" name="title" value="<%= book.title %>">
</div>

<div>
    <label>Auteur</label>
    <select name="author">

        <% authors.forEach(author => { %>

        <% if (author.id === book.author) { %>
        <option selected value="<%=author.id%>" label="<%=author.name%>">
            <% } else {%>
        <option value="<%=author.id%>" label="<%=author.name%>">
            <%}%>

    <%})%>

    </select>
</div>

<div>
    <label>Date de publication</label>
    <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : 
    book.publishDate.toISOString().split('T')[0] %>">
</div>

<div>
    <label>Nombre de pages</label>
    <input type="number" name="pageCount" value="<%= book.pageCount %>" min="1">
</div>

<div>
    <label>Couverture</label>
    <input type="file" name="cover">
</div>

<div>
    <label>Description</label>
    <textarea name="description">
        <% book.description %> 
    </textarea>
</div>