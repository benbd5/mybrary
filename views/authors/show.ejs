<h2><%= author.name %></h2>
<a href="/authors/<%= author.id  %>/edit">Modifier</a>
<%- include('../partials/deleteForm', 
{ url: `/authors/${author.id}`}) %>

<% if (booksByAuthor.length > 0) { %>
<h2>Livres de l'auteur</h2>
<div>
    <% booksByAuthor.forEach(book => { %>
    <a href="/books/<%= book.id %>">
        <img src="<%= book.coverImagePath %>" alt="" height="150" width="100">
    </a>
    <% }) %>
</div>
<% } %>